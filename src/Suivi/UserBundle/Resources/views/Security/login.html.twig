{% extends "FOSUserBundle::layout.html.twig" %}

{% block title %}{{ 'security.login.title' | trans({}, 'FOSUserBundle') }}{% endblock %}

{% block fos_user_content %}

{% block flash_error %}
    {% if error %}
        <div class="alert alert-error">
            <button type="button" class="close" data-dismiss="alert">Ã—</button>
            {{ error|trans({}, 'FOSUserBundle') }}
        </div>
    {% endif %}
{% endblock %}

{% block content %}
<form class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post" novalidate="novalidate">
    <legend>{{ 'security.login.legend' | trans({}, 'FOSUserBundle') }}</legend>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <div class="control-group">
        <label class="control-label" for="inputEmail">{{ 'security.login.username'|trans({}, 'FOSUserBundle') | suffix }}</label>
        <div class="controls">
            <input class="input-large" placeholder="{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
        </div>
    </div>

    <div class="control-group">
        <label class="control-label" for="inputEmail">{{ 'security.login.password'|trans({}, 'FOSUserBundle') | suffix}}</label>
        <div class="controls">
            <input class="input-large" placeholder="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}" type="password" id="password" name="_password" required="required" />
        </div>
    </div>

    <div class="control-group">
    <div class="controls">
        <label class="checkbox">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on"> {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
        </label>

        <input class="btn" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
    </div>
    </div>

</form>
{% endblock %}

{% endblock fos_user_content %}
