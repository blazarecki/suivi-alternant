<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="utf-8">
        <title>{% block title %}{% endblock %} {{ 'titleSuffix' | trans }}</title>
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">
        <meta name="author" content="">

        {% block stylesheets %}
            {% stylesheets
                '../app/Resources/css/bootstrap.css'
                '../app/Resources/css/bootstrap-responsive.css'
                filter = 'yui_css'
                output = 'css/layout.css'
            %}
                <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />
            {% endstylesheets %}
        {% endblock %}

        <style type="text/css">
            body {
              padding-top: 60px;
              padding-bottom: 40px;
            }
            .sidebar-nav {
              padding: 9px 0;
            }
        </style>

            <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
            <!--[if lt IE 9]>
              <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
            <![endif]-->

    </head>

    <body>

        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="{{ url('main_index') }}">{{ 'name' | trans }}</a>
                    <div class="nav-collapse collapse">
                        <p class="navbar-text pull-right">
                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                                <a class="navbar-link" href="{{ path('fos_user_security_logout') }}">
                                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                                </a>
                            {% else %}
                                <a class="navbar-link" href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                            {% endif %}
                        </p>
                        <ul class="nav">
                            <li class="active"><a href="#">{{ 'home' | trans }}</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row-fluid">
                {% block flash_error %}
                {% if app.session.hasFlash('error')%}
                    <div class="alert alert-error">
                        <button type="button" class="close" data-dismiss="alert">×</button>
                        {{ app.session.flash('error') | trans }}
                    </div>
                {% endif %}
                {% endblock %}

                {% block flash_success %}
                {% if app.session.hasFlash('success')%}
                    <div class="alert alert-success span12">
                        <button type="button" class="close" data-dismiss="alert">×</button>
                        {{ app.session.flash('success') | trans }}
                    </div>
                {% endif %}
                {% endblock %}

                {% block flash_info %}
                {% if app.session.hasFlash('info')%}
                    <div class="alert alert-info">
                        <button type="button" class="close" data-dismiss="alert">×</button>
                        {{ app.session.flash('info') | trans }}
                    </div>
                {% endif %}
                {% endblock %}
            </div>
            <div class="row-fluid">
                {% block content %}{% endblock %}
            </div>

            <hr>

            <footer>
                <p>{{ 'footer' | trans | raw }}</p>
            </footer>
        </div>

    </body>
</html>

